
@{
    ViewBag.Title = "Verificación";
}
<link rel="stylesheet" href="~/Content/verifyaccount.css" />
@if (ViewBag.Status != null && Convert.ToBoolean(ViewBag.Status))
{
    <div class="center div-alert materialert success" style="width:100%;">
        <h3 class="center smallsol">
            <strong >
                Haz verificado tu cuenta.
                <br />Haz <a href="~/admin/login" style="color:#00acff;">click aquí para iniciar sesión</a>.
            </strong>
        </h3>
    </div>
}
else
{
<div class="center div-alert materialert danger" style="width:100%;">
    <h3 class="center smallworld">
        @ViewBag.Msg <small class="smallrio">(Estamos 99.9% seguros de eso)</small>  
    </h3>
</div>
}

    <script defer>
        var divAlert = document.querySelector(".div-alert");
        if (divAlert != null)
            document.querySelector('main').classList.add('valign-wrapper');
    </script>
