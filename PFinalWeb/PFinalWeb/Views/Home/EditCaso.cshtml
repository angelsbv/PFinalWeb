<link rel="stylesheet" herf="~/content/Editcaso.css">
@model PFinalWeb.Models.Casos

@{
    ViewBag.Title = "Editando Caso";
}

<h2>Editar Caso</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="row">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "red-text" })
    @Html.EditorFor(model => model.IDCaso, new { htmlAttributes = new { type = "hidden" } })
    <div class="input-field col s4">
        @Html.EditorFor(model => model.Nombre, new { htmlAttributes = new { @class = "" } })
        <label for="username" class="unableToSelect">Nombre</label>
        @Html.ValidationMessageFor(model => model.Nombre, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.EditorFor(model => model.Apellido, new { htmlAttributes = new { @class = "" } })
        <label for="apellido" class="unableToSelect">Apellido</label>
        @Html.ValidationMessageFor(model => model.Apellido, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.EditorFor(model => model.Cedula, new { htmlAttributes = new { @class = "" } })
        <label for="cedula" class="unableToSelect">Cédula</label>
        @Html.ValidationMessageFor(model => model.Cedula, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.EditorFor(model => model.País, new { htmlAttributes = new { @class = "" } })
        <label for="pais" class="unableToSelect">País</label>
        @Html.ValidationMessageFor(model => model.País, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.LabelFor(model => model.Ciudad, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.Ciudad, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Ciudad, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.LabelFor(model => model.Latitud, htmlAttributes: new { })
        @Html.EditorFor(model => model.Latitud, new { htmlAttributes = new { @class = "", type = "number" } })
        @Html.ValidationMessageFor(model => model.Latitud, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.LabelFor(model => model.Longitud, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.Longitud, new { htmlAttributes = new { @class = "", type = "number" } })
        @Html.ValidationMessageFor(model => model.Longitud, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.LabelFor(model => model.FechaNacimiento, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.FechaNacimiento, new { htmlAttributes = new { @class = "", placeholder = "" } })
        @Html.ValidationMessageFor(model => model.FechaNacimiento, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.LabelFor(model => model.Comentario, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.Comentario, new { htmlAttributes = new { @class = "" } })
        @Html.ValidationMessageFor(model => model.Comentario, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="input-field col s4">
        @Html.LabelFor(model => model.FechaContagio, htmlAttributes: new { @class = "" })
        @Html.EditorFor(model => model.FechaContagio, new { htmlAttributes = new { @class = "", placeholder = "" } })
        @Html.ValidationMessageFor(model => model.FechaContagio, "", new { @class = "red-text unableToSelect" })
    </div>

    <div class="row">
        <div class="col s12">
            <button type="submit" value="Guardar Caso"
                    class="smallcafeconleche">
                Guardar Cambios
            </button>
        </div>
    </div>
</div>
}