@model PFinalWeb.Models.Casos

@{
    ViewBag.Title = "Agregar Caso";
}

<h2>Agregar Caso</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="row">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "red-text" })
