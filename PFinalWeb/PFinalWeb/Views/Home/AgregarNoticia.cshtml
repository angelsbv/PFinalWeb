<link rel="stylesheet" href="~/Content/agregarnoticias.css"/> 
@model PFinalWeb.Models.Noticias

@{
    ViewBag.Title = "Agregando Noticia";
}

<h2>Agregar Noticia</h2>
@using (Html.BeginForm("AgregarNoticia", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "red-text" })
        <div class="input-field col s4">
            @Html.LabelFor(model => model.Titulo, htmlAttributes: new { @class = "" })
            @Html.EditorFor(model => model.Titulo, new { htmlAttributes = new { @class = "" } })
            @Html.ValidationMessageFor(model => model.Titulo, "", new { @class = "red-text unableToSelect" })
        </div>

        <div class="input-field col s4">
            @Html.LabelFor(model => model.Resumen, htmlAttributes: new { @class = "" })
            <input name="Resumen" id="Resumen" type="text" data-length="30" />
            @Html.ValidationMessageFor(model => model.Resumen, "", new { @class = "red-text unableToSelect" })
        </div>

        <div class="file-field input-field col s4">
            <div class="btn blue">
                <span>Imagen</span>
                <input id="file" name="file" type="file" />
            </div>
            <div class="file-path-wrapper">
                <input class="file-path validate" type="text">
                @Html.ValidationMessageFor(model => model.file, "", new { @class = "red-text unableToSelect" })
                @Html.ValidationMessage("postedImg")
            </div>
        </div>

        <div class="input-field col s4" style="max-height: 300px; ">
            <label class="" for="Contenido">Contenido</label>
            <textarea class="smallcafecito" id="Contenido" name="Contenido"></textarea>
            <span class="field-validation-valid red-text unableToSelect"></span>
        </div>

        <div class="row">
            <div class="col s12">
                <button type="submit" value="Publicar"
                        class="btn waves-effect waves-teal white-text blue" style="width:100%">
                    Publicar
                </button>
            </div>
        </div>
    </div>
}

